# Family Reward 环境变量配置

# ==========================================
# Better-Auth 配置 (必需)
# ==========================================
# Better-Auth 密钥 (用于签名会话令牌)
# 生成命令: openssl rand -base64 32
BETTER_AUTH_SECRET=your_secret_key_here_change_in_production

# 备用密钥 (兼容配置)
AUTH_SECRET=your_auth_key_here

# Better-Auth 基础 URL
BETTER_AUTH_URL=http://localhost:3344

# ==========================================
# 应用配置
# ==========================================
NEXT_PUBLIC_APP_NAME=Family Reward
NEXT_PUBLIC_APP_DESCRIPTION=家庭行为管理游戏平台

# ==========================================
# 数据库配置
# ==========================================
DATABASE_URL=database/db.sqlite

# ==========================================
# OTP 服务配置 (可选 - 用于手机号 OTP 短信验证)
# ==========================================
# OTP 服务提供商: console, aliyun, tencent
# - console: 开发模式，验证码输出到控制台 (默认)
# - aliyun: 阿里云短信服务 (需要配置 ALIYUN_* 参数)
# - tencent: 腾讯云短信服务 (需要配置 TENCENT_* 参数)
OTP_PROVIDER=console

# 开发环境固定验证码 (用于测试，仅当 OTP_PROVIDER=console 时生效)
OTP_DEBUG_CODE=111111

# 阿里云 SMS 配置 (当 OTP_PROVIDER=aliyun 时需要)
ALIYUN_ACCESS_KEY_ID=your_aliyun_access_key_id
ALIYUN_ACCESS_KEY_SECRET=your_aliyun_access_key_secret
ALIYUN_SMS_SIGN_NAME=FamilyReward
ALIYUN_SMS_TEMPLATE_CODE=SMS_123456789

# 腾讯云 SMS 配置 (当 OTP_PROVIDER=tencent 时需要)
TENCENT_SECRET_ID=your_tencent_secret_id
TENCENT_SECRET_KEY=your_tencent_secret_key
TENCENT_SMS_APP_ID=your_tencent_sms_app_id
TENCENT_SMS_SIGN_NAME=FamilyReward
TENCENT_SMS_TEMPLATE_ID=123456

# ==========================================
# 开发配置
# ==========================================
NODE_ENV=development
DEBUG=false
NEXT_PUBLIC_APP_URL=http://localhost:3344
